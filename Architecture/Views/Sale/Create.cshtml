@model Architecture.Models.SaleModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SaleModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssetName" class="control-label"></label>
                <input asp-for="AssetName" class="form-control" />
                <span asp-validation-for="AssetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartSale" class="control-label"></label>
                <input asp-for="StartSale" class="form-control" />
                <span asp-validation-for="StartSale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSale" class="control-label"></label>
                <input asp-for="EndSale" class="form-control" />
                <span asp-validation-for="EndSale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherEmail" class="control-label"></label>
                <input asp-for="PublisherEmail" class="form-control" />
                <span asp-validation-for="PublisherEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
